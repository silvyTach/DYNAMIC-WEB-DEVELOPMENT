<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
        <!-- Using ejs to import the head code  -->
        <link rel="stylesheet" type="text/css" href="/css/results.css">
        <link rel="stylesheet" type="text/css" href="/css/index-main.css">
        <!-- Linking the stylesheet for the index page -->
</head>

<body>
    <header>
        <% include ../partials/header.ejs %>
            <!-- Using ejs to import the header code -->
    </header>
    <main class="grid-container">
        <!-- displaying the information about the results of the search for a movie  -->
        <!-- the information is presented in the same format as we see it in the slideshow on the index page -->
        <!-- the only difference is that the poster is on the left side -->
        <% search.results.forEach(function(movie){%>
            <div class="slideshow fade">
                <div class="text">
                    <h1 class="title">
                        <%= movie.title %>
                    </h1>
                    <ul class="info">
                        <li class="rating">⭐️
                            <%= movie.vote_average %><i> /10</i>
                        </li>
                    </ul>
                    <p class="plot">
                        <%= movie.overview %>
                    </p>
                    <div><a href="/movieshowinfo?id=<%=movie.id %>&user=<%=user%>" class="button url" tabindex="-1">more details</a></div>
                </div>
                <div class="image">
                    <img src="https://image.tmdb.org/t/p/original/<%= movie.poster_path %>" alt="<%= movie.title %> Poster" width="261px" height="401px">
                </div>
            </div>
            <hr>
            <!-- results are separated by a line -->
            <% }); %>
                <!-- end of all the results -->
    </main>
    <footer class="grid-100 tablet-grid-100 footer">
        <% include ../partials/footer.ejs %>
            <!-- Using ejs to import the footer code -->
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- <script src="/scripts/searchresults.js"></script> -->
</body>

</html>
