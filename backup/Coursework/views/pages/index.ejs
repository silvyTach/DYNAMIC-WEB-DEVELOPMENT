<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
        <!-- Using ejs to import the head code -->
        <link rel="stylesheet" type="text/css" href="/css/index-main.css">
        <script src="/scripts/index.js"></script>
        <!-- Linking the stylesheet for the index page -->
</head>

<body>
    <header>
        <% include ../partials/header.ejs %>
            <!-- Using ejs to import the header code -->
    </header>
    <main>
        <!-- Top  5 in the user's location -->
        <section id="top5">
            <!-- Left slideshow arrow -->
            <div id="left" class="arrows">
                <img onclick="plusSlides(-1)" src="/images/left-arrow.png">
            </div>
            <!-- Top 5 most popular movies -->
            <%for(var i = 0; i < 5; i++) {%>
                <div class="slideshow fade">
                    <div class="text">
                        <h1 class="title">
                            <%= index[i].title %>
                        </h1>
                        <ul class="info">
                            <li class="rating">⭐️
                                <%= index[i].vote_average %><i> /10</i></li>
                            <!-- there was meant to be more info apart from the rating here -->
                            <!-- that's why a list element is used -->
                        </ul>
                        <p class="plot">
                            <%= index[i].overview %>
                        </p>
                        <div><a href="/movieshowinfo?id=<%=index[i].id %>" class="button url" tabindex="-1">more details</a></div>
                    </div>
                    <div class="image">
                        <img src="https://image.tmdb.org/t/p/original/<%= index[i].poster_path %>" alt="<%= index[i].title %> Poster" width="261px" height="401px">
                    </div>
                </div>
                <% }; %>
                    <!-- Right slideshow arrow -->
                    <div id="right" class="arrows">
                        <img onclick="plusSlides(1)" src="/images/right-arrow.png">
                    </div>
        </section>
    </main>
    <section id="white">
        <!-- Top 5 Comedies -->
        <div class=" provider" id="Comedy">
        </div>
        <!-- Top 5 Action movies -->
        <div class=" provider" id="Action">
        </div>
        <!-- Top 5 Romances -->
        <div class=" provider" id="Romance">
        </div>
        <!-- Top 5 Crime movies -->
        <div class=" provider" id="Crime">
        </div>
    </section>
    <footer class="grid-100 tablet-grid-100 footer">
        <% include ../partials/footer.ejs %>
            <!-- Using ejs to import the footer code -->
    </footer>
    <script src="/scripts/slideshowscript.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</body>

</html>
